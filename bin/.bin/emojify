#!/usr/bin/env bash

function emojify_match(){
    declare -a emojis=( ["tada"]="🎉" ["+1"]="👍" )
    shopt -s extglob
    echo "${emojis[$1]}"
}

function emojify(){
    if (( $# == 0 )) ; then
        base64 --decode < /dev/stdin
        echo
    else
        base64 --decode <<< "$1"
        echo
    fi
}

emojify "$@"
